    <div id="Unit">
        <h5 style=
        "font-size: 5vw; 
        font-family: 'cocogoose'; 
        color: black;
        text-align: center;
        margin-top: 1rem;
        margin-bottom: 1rem;">
            UNIT KEGIATAN
        </h5>
        <div style="background-color: #181818; width: auto; height: auto; min-height: 300px;">

        </div>
    </div>
    <div class="d-flex justify-content-start" style="background-color: white;" id="Vote">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-4" style="width: 20rem; padding: 10px; margin-left: 5vw; margin-top: 20px; margin-bottom: 30px;">
                    <form action="/users/" method="POST">
                        <% include ./partials/messages %>
                        <div class="form-group">
                        <label for="Status">Status</label>
                        <select class="custom-select" id="selectStatus">
                            <option value="1">Mahasiswa</option>
                            <option value="2">Alumni</option>
                        </select>
                        </div>
                        <div class="form-group NRP">
                            <label for="NRP">NRP</label>
                            <input
                                type="nrp"
                                id="nrp"
                                name="nrp"
                                class="form-control"
                                placeholder="Masukkan NRP"
                                value="<%= typeof nrp != 'undefined' ? nrp : '' %>"
                            />
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Email address</label>
                            <input
                                    type="email"
                                    id="email"
                                    name="email"
                                    class="form-control"
                                    placeholder="Masukkan E-mail"
                                value="<%= typeof email != 'undefined' ? email : '' %>"
                            />
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Password</label>
                            <input
                                type="password"
                                id="token"
                                name="token"
                                autocomplete="off"
                                class="form-control"
                                placeholder="Masukkan Token Rahasia"
                                value="<%= typeof token != 'undefined' ? token : '' %>"
                            />
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>
                <div class="col-md-8">
                </div>
            </div>
        </div>
    </div>
    <div style="background-color: red; width: 99.5vw; height: 20vh;">

